{% extends 'base.html.twig' %}

{% block body %}
    <main>
        <section class="sortie">

            {% for sorties in sorties %}
                <article >
                    <div class="form-group row col-md-4 col-form-label
                                                        text-md-right">
                        <h2 >{{ sorties.nom }}</h2>
                    </div>

                    <div>
                        Ecrit le {{ sorties.datedebut | date('d/m/Y')}} Ã  {{ sorties.datecloture | date('H:i')}}
                        {{ sorties.descriptioninfos | raw }}
                        <button > <a href=" {{ path('sortie_show', {'id': sorties.id}) }}" class="btn btn-primary">Lire la suite</a></button>
                    </div>
                    <div class="form-group row">
                        <img src="{{ sorties.urlphoto }}" alt="">


                    </div>

                    <hr>


                </article>

            {% endfor %}

        </section>
    </main>
{% endblock %}