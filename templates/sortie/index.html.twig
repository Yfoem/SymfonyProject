{% extends 'base.html.twig' %}

{% block title %}Sortie{% endblock %}

{% block body %}

<form method="post">
    <div>
    <select name="ville" id="ville" class="form-control" >

        <option value="0">-Filtrer par Ville--</option>
        {% for ville in villes %}
            <option value="{{ ville.getId() }}">{{ ville.getNomVille() }}</option>
        {% endfor %}
    </select>
    <button type="submit">Filtrer</button>
    </div>
</form>
    <main>
        <section class="sortie">


            {% for sortie in sorties %}
                <article >

                    <div class="form-group row col-md-4 col-form-label
                                                        text-md-right">
                        <h2 ><a href=" {{ path('sortie_show', {'id': sortie.id}) }}">{{ sortie.nom }}</a></h2>
                    </div>
                    {{ sortie.getLieuxId().getNomLieu() }}
                    <div>
                      DÃ©but : {{ sortie.datedebut | date('d/m/Y')}}, Fin des inscriptions :{{ sortie.datecloture | date('H:i')}}
                    </div>
                    <div class="form-group row">
                        {% if sortie.urlphoto!= "" %}
                        <img src="{{ sortie.urlphoto }}" alt="">
                        {% endif %}


                    </div>

                    <hr>


                </article>

            {% endfor %}

        </section>
    </main>
{% endblock %}
